doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css") 
        script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js") 
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js")
         
        title CRUD APP
    body 
        h1(class="text-center mt-4") User Table
        table(class="table table-hover text-center m-4 ml-auto mr-auto w-75")
            thead
                tr
                    td ID
                    th Name
                    th Surname 
                    th E-mail 
                    th Password
                    th Operands
            tbody
                each data in datas
                    tr
                        td #{data.id}
                        td #{data.name}
                        td #{data.surname}
                        td #{data.email}
                        td #{data.password}
                        td
                            a(href=`/`+ data.id class="m-1") <i class="fas fa-user-edit"></i>  
                            a(href=`/delete/`+ data.id class="m-1 text-danger") <i class="fa-solid fa-user-minus"></i>
        a(href="/" class="btn btn-primary text-white" style="position: fixed;margin-left:90% ;width:120px") <i class="fa-solid fa-user-plus"></i> Add User     
        


                

            


        