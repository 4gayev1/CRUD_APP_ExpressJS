        form(action=`/edit/`+id  ,method='POST')
            div(class="d-flex flex-column w-25 mt-5 ml-auto mr-auto ")
                label(for="name") Name
                    input(type="text" name="name" class="form-control")
                label(for="surname") Surname
                    input(type="text" name="surname"  class="form-control")
                label(for="name") E-mail
                    input(type="email" name="email"  class="form-control")
                label(for="password") Password
                    input(type="password" name="password"  class="form-control")
                button(type="submit" class="btn btn-success mt-1 w-100") <i class="fas fa-user-edit"></i> Edit
                a(href="/users" class="btn btn-danger mt-1 w-100") <i class="fa-solid fa-xmark"></i> Cancel